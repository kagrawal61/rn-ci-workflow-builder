{
  "kind": "build",
  "options": {
    "name": "React Native Android Build",
    "nodeVersions": [20],
    "packageManager": "yarn",
    "triggers": {
      "push": {
        "branches": ["main", "develop"]
      },
      "pullRequest": {
        "branches": ["main", "develop"]
      },
      "workflowDispatch": true
    },
    "env": {
      "NODE_ENV": "ci"
    },
    "cache": {
      "enabled": true
    },
    "build": {
      "platform": "android",
      "flavor": "develop",
      "variant": "release",
      "storage": "github",
      "notification": "pr-comment",
      "includeHealthCheck": true,
      "androidOutputType": "apk"
    }
  }
}