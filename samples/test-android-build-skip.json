{
  "kind": "build",
  "options": {
    "name": "Test Android Build with Skip",
    "triggers": {
      "push": {
        "branches": ["main", "develop"]
      },
      "pullRequest": {
        "branches": ["main", "develop"]
      },
      "workflowDispatch": true
    },
    "packageManager": "yarn",
    "nodeVersions": [20],
    "runsOn": "ubuntu-latest",
    "skip": {
      "commitMessageContains": "[skip ci]",
      "prTitleContains": "[skip android]",
      "prLabel": "no-build"
    },
    "env": {
      "NODE_ENV": "ci"
    },
    "cache": {
      "enabled": true
    },
    "build": {
      "platform": "android",
      "flavor": "develop",
      "variant": "debug",
      "storage": "github",
      "notification": "pr-comment",
      "includeHealthCheck": true
    }
  }
}