{
  "name": "rn-ci-workflow-builder",
  "version": "0.1.0",
  "description": "CLI + library to generate GitHub Actions workflows for React-Native CI/CD pipelines (health-check, build, etc.)",
  "type": "commonjs",
  "main": "dist/src/generator.js",
  "types": "dist/src/generator.d.ts",
  "bin": {
    "rn-ci-workflow-builder": "./dist/src/cli.js"
  },
  "scripts": {
    "dev": "ts-node src/cli.ts generate health-check",
    "generate": "ts-node src/cli.ts generate",
    "generate:health": "ts-node src/cli.ts generate health-check",
    "list-presets": "ts-node src/cli.ts list-presets",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tabler/icons-react": "^3.34.0",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.523.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
